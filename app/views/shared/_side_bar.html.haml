.contents__left
  .contents__left__header
    .contents__left__header__box
      = current_user.name
    .contents__left__header_logo1
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'btn'
    .contents__left__header_logo2
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'btn'
  .contents__left__footer1
    - current_user.groups.each do |group|
      .contents__left__footer1__box1
        = link_to group_messages_path(group), class: "b" do
          = group.name
        %p(class="j")= group.show_last_message